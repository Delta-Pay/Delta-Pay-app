{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env src/backend/server.ts",
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env src/backend/server.ts",
    "lint": "deno lint src/backend/",
    "test": "deno test src/backend/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "camelcase", "no-unused-vars"]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "importMap": "./import_map.json"
}