{
  "name": "delta-pay-app",
  "version": "1.0.0",
  "description": "Delta Pay - International Payment Solution",
  "main": "src/backend/server.ts",
  "scripts": {
    "dev": "npm run dev:backend & cd src/frontend && npm run dev",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "deno run --allow-net --allow-read --allow-write --allow-env src/backend/server.ts",
    "build": "cd src/frontend && npm install && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd src/frontend && npm run lint",
    "lint:backend": "deno lint src/backend/",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd src/frontend && npm test",
    "test:backend": "deno test src/backend/",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env src/backend/server.ts",
    "install:frontend": "cd src/frontend && npm install"
  },
  "keywords": ["payment", "banking", "international", "security", "deno", "react"],
  "author": "Delta Pay Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.0.0"
  }
}